FROM debian:bullseye-slim
ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get clean && apt-get update && apt-get -y upgrade
RUN apt-get -y install vim xterm git cmake gcc python3 sqlite3 zram-tools \
    libstdc++-10-dev nano python3-setuptools python3-wheel tcpdump apt-utils \
     python3-numpy python3-pandas python3-six python3-yaml lynx rustc
RUN useradd -m user -p user -G root
COPY --chown=user:user ./examples /home/user/Workspace
RUN mkdir  /home/user/repo
RUN chown -R user:user /home/user
RUN chmod 777 -R /home/user
WORKDIR /home/user/
# We set env, as this gets extracted by Webvm. This is optional.
ENV HOME="/home/user" TERM="xterm" USER="user" SHELL="/bin/bash" EDITOR="vim" LANG="en_US.UTF-8" LC_ALL="C"
RUN gcc --version
RUN python3 --version
RUN vim --version
RUN git --version
CMD [ "/bin/bash" ]
